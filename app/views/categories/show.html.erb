<% title "Category" %>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<p>
  <% if can? :update || :destroy, @category%>
  	<%= link_to "Edit", edit_category_path(@category) %> |
  	<%= link_to "Destroy", @category, :confirm => 'Are you sure?', :method => :delete %> |
  <%end%>
  <%= link_to "View All", categories_path %>
</p>
